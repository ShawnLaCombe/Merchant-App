<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td> <button type="button" class: "btn btn-info"><%= admin_category_path(category) %></button></td>
        <td><button type="button" class: "btn btn-primary"><%= link_to 'Show', admin_category_path(category) %></button></td>
        <td><button type="button" class: "btn btn-secondary"><%= link_to 'Edit', edit_admin_category_path(category) %></button></td>
        <td><button type="button" class: "btn btn-danger"><%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


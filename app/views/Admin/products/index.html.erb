<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Category</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%=  image_tag product.avatar.url(:thumb) %></td>
        <td><button type="button" class: "btn btn-info"><%= product.name %></td>
        <td><button type="button" class: "btn btn-info"><%= product.price %></td>
        <td><button type="button" class: "btn btn-info"><%= product.quantity %></td>
        <td><button type="button" class: "btn btn-info"><%= product.description %></td>
        <td><button type="button" class: "btn btn-info"><%= product.category.try(:name) %></td>
        <td><button type="button" class: "btn btn-info"><%= product.brand.try(:name) %></td>
        <td> link_to fa_icon("eye", text:'Show'), admin_product_path(product) %></td>
        <td><button type="button" class: "btn btn-secondary"><%= link_to 'Edit', edit_admin_product_path(product) %></td>
        <td><button type="button" class: "btn btn-danger"><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_admin_product_path, class: "btn btn-success" %>

<p id="notice"><%= notice %></p>

<h1>Listing Brands</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= link_to fa_icon("eye", text:'Show'), admin_brand_path(brand) %></td>
        <td><%= link_to fa_icon("pencil", text:'Edit'), edit_admin_brand_path(brand) %></td>
        <td><%= link_to fa_icon("trash", text: 'Destroy'), admin_brand_path(brand), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brand', new_admin_brand_path, class: "btn btn-sm btn-success" %>

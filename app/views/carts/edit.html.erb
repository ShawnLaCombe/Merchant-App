<h2>Your Shopping Cart</h2>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total Price</th>
    </tr>
  </thead>
  <tbody>
    <% @cart.line_items.each do |product|  %>
    <tr>
      <td><%= product.product.name %></td>
      <td><%= product.quantity %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td><%= number_to_currency(product.total_price) %></td>
      <td><%= image_tag product.product.avatar.url(:thumb) %></td>
      <td><%= link_to "Delete", line_item_path(product.id), method: :delete, class: "btn btn-danger btn-sm" %></td>
    </tr>
    <% end %>
  </tbody>
  </table>

  <h3>Order Subtotal: <%= number_to_currency(@cart.subtotal) %></h3>

  <%= link_to "Checkout", new_order_path, class: "btn btn-info btn-sm" %>
  <%= link_to "Continue Shopping", shop_path, class: "btn btn-success btn-sm" %>
  <%= link_to "Empty Cart", @cart, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %>

